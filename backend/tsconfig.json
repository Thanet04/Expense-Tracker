{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Environment */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Build */
    "sourceMap": true,

    /* Type Checking */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Skip */
    "skipLibCheck": true
  }
}
